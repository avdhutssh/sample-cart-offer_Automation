<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Zomato Offer API Test Suite" verbose="1">
    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.SampleCartOffer.tests._01_smokeTest"/>
        </classes>
    </test>
    <test name="Regression Tests">
        <groups>
            <run>
                <include name="Regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.SampleCartOffer.tests._02_RegressionTest"/>
        </classes>
    </test>
    <test name="Integration Tests">
        <groups>
            <run>
                <include name="Integration"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.SampleCartOffer.tests._03_IntegrationTest"/>
        </classes>
    </test>
    <test name="Negative Tests">
        <groups>
            <run>
                <include name="Negative"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.SampleCartOffer.tests._04_NegativeTest"/>
        </classes>
    </test>
</suite>